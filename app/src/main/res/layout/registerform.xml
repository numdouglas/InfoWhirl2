<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:text="WELCOME. NEVER MISS ANOTHER EVENT."
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/namereg"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#fffac4"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passreg"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/namereg"
        android:layout_below="@+id/namereg"
        android:layout_marginTop="45dp"
        android:background="#fffac4"
        android:ems="10"
        android:hint="passkey"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/hobby"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/passreg"
        android:layout_below="@+id/passreg"
        android:layout_marginTop="49dp"
        android:background="#fffac4"
        android:ems="10"
        android:hint="hobby"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/course"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/hobby"
        android:layout_below="@+id/hobby"
        android:layout_marginTop="40dp"
        android:background="#fffac4"
        android:ems="10"
        android:hint="course"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/registernew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="REGISTER" />
</RelativeLayout>